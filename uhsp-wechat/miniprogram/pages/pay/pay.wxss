/* pages/pay/pay.wxss */
scroll-view{
  /* 防止页面滚动导致的二维码移动，不知道为啥 */
  overflow: hidden;
}

.default{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80vh;
  width: 100vw;
}

.default image{
  width: 100vw;
}

/* 内容 */
.order{
  display: flex;
  flex-direction: row;
  border-radius: 25rpx;
  overflow: hidden;
}

.order .left{
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 80%;
}

.order .left .appoint{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  white-space:nowrap;
}

.order .left .price{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.order .left .van-divider{
  margin-top: 10rpx !important;
  margin-bottom: 10rpx !important;
}

.order .left .order-code{
  display: flex;
  flex-direction: row;
}

.order .left .button-group{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.order .right{
  writing-mode: vertical-lr;
  letter-spacing: 10rpx;
  box-shadow: 1px 0px 1px grey inset;
}